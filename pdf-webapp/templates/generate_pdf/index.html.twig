{% extends 'base.html.twig' %}

{% block title %}Hello GeneratePdfController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Convertir un fichier PDF</h1>
    <p>Vous avez {{ conversionLeft }} conversions restantes aujourd'hui.</p>

{% if conversionLeft > 0 %}
    {{ form(form) }}
{% else %}
    <p>Vous avez atteint la limite de conversion de PDF journalière.</p>
    <li><a href="{{ path('app_home') }}">Retourner à l'accueil</a></li>
    <li><a href="{{ path('app_handle_subscription') }}">Changer mon abonnement.</a></li>

{% endif %}



</div>
{% endblock %}
