{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card my-5">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Accueil</h1>
                    {% if user %}
                        <p class="card-text text-primary">Bienvenue, {{ user.firstname }}!</p>
                        <ul class="list-group mb-3">
                            <li class="list-group-item"><a href="{{ path('app_history') }}" class="text-primary text-decoration-none">Voir mes PDF</a></li>
                            <li class="list-group-item"><a href="{{ path('app_logout') }}" class="text-danger text-decoration-none">Me déconnecter</a></li>
                        </ul>
                    {% else %}
                        <ul class="list-group mb-3">
                            <li class="list-group-item"><a href="{{ path('app_login') }}" class="text-primary text-decoration-none">Me connecter</a></li>
                            <li class="list-group-item"><a href="{{ path('app_register') }}" class="text-primary text-decoration-none">M'inscrire</a></li>
                        </ul>
                    {% endif %}
                    <ul class="list-group">
                        <li class="list-group-item"><a href="{{ path('app_generate-pdf') }}" class="text-primary text-decoration-none">Générer un PDF</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
